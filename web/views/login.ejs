<body class="text-center">

  <main class="form-signin w-100 m-auto">
    <form action="/login/userlogin" method="POST">
      <img class="mb-4" src="/images/logo.png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal" style="color: aliceblue;">Please sign in</h1>

      <div class="form-floating">
        <input type="text" class="form-control" required="true" id="floatingInput" name="username" placeholder="name@example.com">
        <label for="floatingInput">帳號</label>
      </div>

      <div class="form-floating">
        <input type="password" class="form-control" required="true" id="floatingPassword" name="password" placeholder="Password">
        <label for="floatingPassword" >密碼</label>
      </div>

      <p style="color: aliceblue;"><%= loginstatus %></p>
      <button class="w-100 btn btn-lg btn-primary" type="submit">登入</button>
    </form>
  </main>



</body>

</html>