<!DOCTYPE html>
<html lang="zh-TW">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>food●點餐系統</title>
	<!-- Bootstrap css-->
	<link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
	<!-- Bootstrap js-->
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
		integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
		crossorigin="anonymous"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
	<%- include('./partials/headermerch.ejs') %>
		<div class="container" style="margin-top:50px;padding-bottom: 30px">
			<h2 class="h2">大數據分析</h2>
			<ul id="myTab1" class="nav nav-tabs">
				<li class="active"><a href="#customer" data-toggle="tab">餐點銷售數據</a></li>
				<li><a href="#howmanyfood" data-toggle="tab">餐點備貨分析</a></li>
				<li><a href="#waiter" data-toggle="tab">店員分析</a></li>
			</ul>
			<div id="myTabContent" class="tab-content">
				<!-- 訂單紀錄查詢 -->
				<form id="serarchOrderBtn" action="/dataanalysis/getDataAnlysis" method="post">
					<div class="tab-pane fade in active" id="customer">
						<h3 class="text-center">餐點銷售數據</h3>
						<label for="startDate">開始日期：</label>
						<input type="date" id="startDate" name="startDate">
						&nbsp;&nbsp;~&nbsp;&nbsp;
						<label for="endDate">結束日期：</label>
						<input type="date" id="endDate" name="endDate">
						&nbsp&nbsp&nbsp
						<a id="search" href="#"><button type="submit"><span class="glyphicon glyphicon-search"
									aria-hidden="true"></span></button></a>
						<br><br>
						<table class="table table-striped table-hover text-center">
							<div class="button-container1">
								<!-- Pie Chart -->
								<div style="width: 400px;">
									<canvas id="pieChart"></canvas>
								</div>
								<!-- Line Chart -->
								<div style="width: 600px;">
									<canvas id="lineChart"></canvas>
								</div>
							</div>
						</table>
					</div>
				</form>

				<div class="tab-pane fade" id="howmanyfood">
					<h3 class="text-center">餐點備貨分析</h3>
					<label for="startDate">開始日期：</label>
					<input type="date" id="startDate" name="startDate">
					&nbsp;&nbsp;~&nbsp;&nbsp;
					<label for="endDate">結束日期：</label>
					<input type="date" id="endDate" name="endDate">
					&nbsp&nbsp&nbsp
					<a id="search" href="#"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
					<br><br>
					<table class="table table-striped table-hover text-center">

					</table>
				</div>
				<div class="tab-pane fade" id="waiter">
					<h3 class="text-center">店員分析</h3>
					<label for="startDate">開始日期：</label>
					<input type="date" id="startDate" name="startDate">
					&nbsp;&nbsp;~&nbsp;&nbsp;
					<label for="endDate">結束日期：</label>
					<input type="date" id="endDate" name="endDate">
					&nbsp&nbsp&nbsp
					<a id="search" href="#"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
					<br><br>
					<table class="table table-striped table-hover text-center">

					</table>
				</div>
			</div>
		</div><!--container end-->

		<script>
			// Pie Chart Data
			var pieData = {
				labels: ['Red', 'Blue', 'Yellow'],
				datasets: [{
					data: [20, 30, 50],
					backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
				}]
			};

			var pieChart = new Chart(document.getElementById('pieChart'), {
				type: 'pie',
				data: pieData,
				options: {}
			});

			// Line Chart Data
			var lineData = {
				labels: ['January', 'February', 'March', 'April', 'May', 'June'],
				datasets: [{
					label: 'Sales',
					data: [100, 200, 150, 300, 250, 180],
					borderColor: '#FF6384',
					fill: false
				}]
			};

			var lineChart = new Chart(document.getElementById('lineChart'), {
				type: 'line',
				data: lineData,
				options: {}
			});
		</script>
</body>

</html>