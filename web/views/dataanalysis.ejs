</head>

<body>
	<%- include('./partials/headermerch.ejs') %>
		<div class="container" style="margin-top:50px;padding-bottom: 30px">
			<h2 class="h2">大數據分析</h2>
			<ul id="myTab1" class="nav nav-tabs">
				<li class="active"><a href="#customer" data-toggle="tab">餐點銷售數據</a></li>
				<li><a href="#howmanyfood" data-toggle="tab">餐點備貨分析</a></li>
			</ul>
			<div id="myTabContent" class="tab-content">
				<!-- 訂單紀錄查詢 -->
				<div class="tab-pane fade in active" id="customer">
					<h3 class="text-center">餐點銷售數據</h3>
					<div class="container">
						<div class="flex" style="display: flex; gap: 30px;">
							<!-- 格子1 -->
							<div class="rectangle" id="todyEarn">
								<h4>本日營業額</h4>
								<p>NT$0</p>
								<span class="trend-arrow">?</span>
							</div>
							<!-- 格子2 -->
							<div class="rectangle" id="cusCountDay">
								<h4>本日累積來客桌次</h4>
								<p> 0桌</p>
								<span class="trend-arrow">?</span>
							</div>
							<!-- 格子3 -->
							<div class="rectangle"id="monthEarn">
								<h4>本月營業額</h4>
								<p>NT$0</p>
								<span class="trend-arrow">?</span>
							</div>
							<!-- 格子4 -->
							<div class="rectangle" id="cusCount">
								<h4>本月累積來客桌次</h4>
								<p>0桌</p>
								<span class="trend-arrow">?</span>
							</div>
							<!-- 格子5 -->
							<div class="rectangle"id="monthEarnavg">
								<h4>本月平均日營業額</h4>
								<p>NT$0</p> 
							</div>
						</div>
					</div>


					<div class="box">
						<form id="restaurantSlaes" action="/dataanalysis/getRevenueSales" method="post">
							<div class="flex" style="display: flex; justify-content: space-between; align-items: center;">
							  <h4 style="margin: 0;">本店總營收</h4>
							  <select class="type_choose1" id="timeInterval" name="timeInterval" style="margin: 0;" onchange="getSales('2023-01-29', '2023-12-29', this.value)">								
								<option value="month">月</option>
								<option value="season">季</option>
								<option value="year">年</option>
							  </select>
							</div>
						  </form>						  
						<div class="containerlr1">
							<div class="left " id="revenueForm">
								<table class="revenue-table">
									<caption>店家營收</caption>
									<tr>
										<th>日期</th>
										<th>總營收</th>
									</tr>
									<% for (var i=1 ; i < 2 ; i++) { %>
										<tr>
											<td>2023-<%=i%>
											</td>
											<td>$1000</td>
										</tr>
										<% } %>
								</table>
							</div>
							<div class="right ">
								<div style="width: 500px;">
									<canvas id="lineChart"></canvas>
								</div>
							</div>
						</div>
					</div>
					<div class="box">
						<form id="restaurantSlaes" action="/dataanalysis/getObjectSales" method="post">
							<div class="flex" style="display: flex; justify-content: space-between; align-items: center;">
								<h4>各類商品銷售分析</h4>
							</div>

							<div class="containerlr1">
								<div class="left ">
									<h3>STEP 1:選擇種類</h3>
									<select class="type_choose" name="type1" id="type1">
										<% for (var i=1 ; i < 6 ; i++) { %>
											<option>種類<%=i%>
											</option>
											<% } %>
									</select>
									<h3>STEP 2:選擇顯示區間</h3>
									<select class="type_choose" name="timeInterval1" id="timeInterval1">
										<option value="day">日</option>
										<option value="month">月</option>
										<option value="season">季</option>
										<option value="year">年</option>
									</select>
									<br><br>
									<button id="search1" class="dataAna" style="width: 100%;"onclick="updatespieChart()" >查詢</button>
								</div>
								<div class="right ">
									<h4>種類????</h4>
									<div class="box-body" id="chart">
										<canvas id="pieChart"></canvas>
									</div>
								</div>
							</div>
						</form>
					</div>

					<div class="box">
						<form id="restaurantSlaes" action="/dataanalysis/getObjectSales" method="post">
							<h4>單項商品銷售分析</h4>
							<div class="containerlr1">
								<div class="left ">
									<h3>STEP 1:選擇種類</h3>
									<select class="type_choose" name="type2" id="type2">
										<% for (var i=1 ; i < 6 ; i++) { %>
											<option>種類<%=i%>
											</option>
											<% } %>
									</select>
									<h3>STEP 2:選擇商品</h3>
									<select class="type_choose" name="product2" id="product2">
										<% for (var i=1 ; i < 6 ; i++) { %>
											<option>品項<%=i%>
											</option>
											<% } %>
									</select>
									<h3>STEP 3:選擇顯示區間</h3>
									<select class="type_choose" name="timeInterval2" id="timeInterval2">
										<option value="day" id="day">日</option>
										<option value="month" id="month">月</option>
										<option value="season"id="season">季</option>
										<option value="year"id="year">年</option>
									</select>
									<br><br>
									<button id="search2" class="dataAna" style="width: 100%;" id="upload" onclick="updatesalesChart()"><span>查詢
									</span></button>
								</div>
								<div class="right ">
									<h4>品項????</h4>
									<div style="width: 500px;">
										<canvas id="salesChart"></canvas>
									</div>
								</div>
						</form>
					</div>
				</div>
			</div>


			<div class="tab-pane fade" id="howmanyfood">
				<h3 class="text-center">餐點備貨分析</h3>
				<label for="startDate">開始日期：</label>
				<input type="date" id="startDate" name="startDate">
				&nbsp;&nbsp;~&nbsp;&nbsp;
				<label for="endDate">結束日期：</label>
				<input type="date" id="endDate" name="endDate">
				&nbsp&nbsp&nbsp
				<a id="search" href="#"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
				<br><br>
				<table class="table table-striped table-hover text-center">

				</table>
			</div>

		</div>
		</div><!--container end-->

</body>
<script>
	let orderData = [];
	async function getDataAnalysis(startDate, endDate) {
		try {
			var jsonbody = {
				"startDate": startDate,
				"endDate": endDate
			}
			const response = await fetch(`/dataanalysis/getDataAnalysis`, {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(jsonbody),
			})
			if (!response.ok) {
				throw new Error(`HTTP error! Status: ${response.status}`);
			}
			const data = await response.json();

			orderData = data;
			console.log('Success:', orderData);

		} catch (e) {
			console.log(e);
		}
	}
	(getDataAnalysis(1, 1))

	

	
	
	
	  
</script>
