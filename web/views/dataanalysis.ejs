<!DOCTYPE html>
<html lang="zh-TW">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>food●點餐系統</title>
	<!-- Bootstrap css-->
	<link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
	<!-- Bootstrap js-->
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
		integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
		crossorigin="anonymous"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
	<%- include('./partials/headermerch.ejs') %>
		<div class="container" style="margin-top:50px;padding-bottom: 30px">
			<h2 class="h2">大數據分析</h2>
			<ul id="myTab1" class="nav nav-tabs">
				<li class="active"><a href="#customer" data-toggle="tab">餐點銷售數據</a></li>
				<li><a href="#howmanyfood" data-toggle="tab">餐點備貨分析</a></li>
			</ul>
			<div id="myTabContent" class="tab-content">
				<!-- 訂單紀錄查詢 -->
					<div class="tab-pane fade in active" id="customer">
						<form id="serarchOrderBtn" action="/dataanalysis/getDataAnlysis" method="post">
							<h3 class="text-center">餐點銷售數據</h3>
							<div class="container">
								<div class="containerlr1">
									<div class="left">
										<h4>本店總營收</h4>
										<div class="box-body" id="chart">
											<canvas id="lineChart" style="width: 100%;height: 350px;"></canvas>
										</div>
									</div>
									<div class="right">
										<h4>各類商品銷售分析</h4>
										<div class="buttonn-group">
										<% for (var i = 0; i < 5; i++) { %>
											<div class="buttonn">
											  <a href="#a<%=i%>">商品<%=i+1%></a>
											</div>
										  <% } %>
										</div>
										<div style="width: 400px;">
											<canvas id="pieChart"></canvas>
										</div>
									</div>
								</div>
								<div class="containerlr1">
									<div class="left">
										<h4>單項商品銷售分析</h4>
										<div class="box-body" id="chart">
											<canvas id="salesChart" width="400" height="200"></canvas>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				

				<div class="tab-pane fade" id="howmanyfood">
					<h3 class="text-center">餐點備貨分析</h3>
					<label for="startDate">開始日期：</label>
					<input type="date" id="startDate" name="startDate">
					&nbsp;&nbsp;~&nbsp;&nbsp;
					<label for="endDate">結束日期：</label>
					<input type="date" id="endDate" name="endDate">
					&nbsp&nbsp&nbsp
					<a id="search" href="#"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
					<br><br>
					<table class="table table-striped table-hover text-center">

					</table>
				</div>
				
			</div>
		</div><!--container end-->

</body>
<script>
	let orderData = [];
	async function getDataAnalysis(startDate,endDate){
		try{
			var jsonbody = {
				"startDate": startDate,
				"endDate": endDate
			}
			const response = await fetch(`/dataanalysis/getDataAnalysis`, {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(jsonbody),
			})
			if (!response.ok) {
				throw new Error(`HTTP error! Status: ${response.status}`);
			}
			const data = await response.json();
			
			orderData=data;
			console.log('Success:', orderData);

		}catch(e){
			console.log(e);
		}
	}
	(getDataAnalysis(1,1))

		// Pie Chart Data
		var pieData = {
			labels: ['Red', 'Blue', 'Yellow'],
			datasets: [{
				data: [20, 30, 50],
				backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
			}]
		};

		var pieChart = new Chart(document.getElementById('pieChart'), {
			type: 'pie',
			data: pieData,
			options: {}
		});

		// Line Chart Data
		var lineData = {
			labels: ['8/11', '8/12', '8/13', '8/14', '8/15', '8/16','8/17'],
			datasets: [{
				label: 'Sales',
				data: [100, 200, 150, 300, 250, 180,1000],
				borderColor: '#FF6384',
				fill: false
			}]
		};

		var lineChart = new Chart(document.getElementById('lineChart'), {
			type: 'line',
			data: lineData,
			options: {}
		});

		var data = {
			labels: ['項目1', '項目2', '項目3', '項目4', '項目5'],
			datasets: [{
			label: '數據集1',
			data: [10, 25, 15, 30, 20],
			backgroundColor: 'rgba(75, 192, 192, 0.6)',
			borderColor: 'rgba(75, 192, 192, 1)',
			borderWidth: 1
			}]
		};
		//BAR CHART
		const salesData = {
			labels: ['日期1', '日期2', '日期3', '日期4', '日期5'],
			datasets: [{
				label: '銷售量',
				data: [120, 200, 150, 300, 250],
				backgroundColor: 'rgba(54, 162, 235, 0.6)', // 長條的背景顏色
				borderColor: 'rgba(54, 162, 235, 1)', // 長條的邊框顏色
				borderWidth: 1 // 邊框寬度
			}]
		};

	// 配置
	const chartConfig = {
		type: 'bar',
		data: salesData,
		options: {
			scales: {
				y: {
					beginAtZero: true // y 軸從 0 開始
				}
			}
		}
	};

	// 創建圖表
	const ctx = document.getElementById('salesChart').getContext('2d');
	new Chart(ctx, chartConfig);

</script>
</html>