<script src="js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-clientcolor navbar-fixed-top">
	<div class="container-fluid">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="index2.html">
				<img src="images/logo.png" height="50px" >
			</a>
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse keeptop" id="bs-example-navbar-collapse-1" >
			<ul class="nav navbar-nav navbar-right">
				<li><a href="/home"><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>&nbsp;&nbsp;我要點餐</a></li>
				<li><a href="/cart"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>&nbsp;&nbsp;確認餐點</a></li>
				<li><a href="/orderrecord"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>&nbsp;&nbsp;訂單狀態</a></li>
			</ul>
		</div><!-- /.navbar-collapse -->
	</div><!-- /.container-fluid -->
</nav>
<div class="container" style="margin-top:50px;padding-bottom: 30px">
	<h1 class="text-center">我的購物車</h1>
	<h3>確認訂單</h3>
	<% for (var i=0 ; i < 8 ; i++) { %>
	<div class="row orderlist">
		<div class="col-xs-5">
			<div class="media cartitem">
				<div class="media-left">
					<img src="../static/images/food1.jpeg" class="media-object" style="width:60px" alt="">
				</div>
				<div class="media-body">
					<div class="row">
						<div class="col-xs-6">
							<h4 class="media-heading">原味雞白拉麵</h4>
							<p>NT$250<span id="itemPriceId"></span></p>
						</div>
						<div class="col-xs-6">
							<p class="listcolor">
								標註：123<br/><br/>
								標註：456<br/><br/>

							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-2 orderlistpt15">
			<input id="itemNumberId" type="number" class="form-control" name="itemnumber" min="0" value="0">
		</div>
		<div class="col-xs-2 orderlistpt15" style="text-align: right">
			<input type="button" class="btn btn-primary" id="countId" value="確認">
		</div>
		<div class="col-xs-2 orderlistpt15" style="text-align: right">
			小計NT$&nbsp;<em id="itemtotalId" class="itemprice"></em>&nbsp;元
		</div>
		<div class="col-xs-1 orderlistpt15">
			<a href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
		</div>
	</div>
	<% } %>
		<div class="row">
			<div class="col-xs-9" style="text-align: right;padding-top: 20px;">
				<p>商品金額合計</p>
			</div>
			<div class="col-xs-3" style="text-align: center;padding-top: 15px;">
				<p style="font-size: 18px">NT$&nbsp;<em id="itemtotalAllId" class="itemprice">357</em>&nbsp;元</p>
			</div>
		</div>
		<div class="form-group">
			<label for="district">付款方式</label>
			<select class="form-control" name="district">
				<option>現金付款</option>
			</select>
		</div>
		<div class="col-xs-2 orderlistpt15" style="text-align: right">
			總計NT$&nbsp;<em id="itemtotalId3" class="itemprice"></em>&nbsp;元
		</div>
		<div class="col-xs-2 orderlistpt15" style="text-align: right">
			<input type="button" class="btn btn-primary" id="countId3" value="確認">
		</div>
	</div>
		</div>
	</div>
</div>

</body>
</html>