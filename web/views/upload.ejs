<div id="myTabContent" class="tab-content">
	<div class="tab-pane fade in active" id="confirm">
		<h3 class="text-center">上架商品</h3>
		<table class="table table-striped table-hover text-center">
			<tr>
				<th class="text-center">項次</th>
				<th class="text-center">商品名稱</th>
				<th class="text-center">商品種類</th>
				<th class="text-center">商品描述</th>
				<th class="text-center">價錢</th>
				<th class="text-center">選擇照片</th>
				<th class="text-center">上架</th>
			</tr>
			<%var j=1%>	
			<%if (j!=0){%>
				<tr>
					<th class="text-center"><%=j%></th>
					<td>
						<input type="name" class="form-control" id="exampleInputPassword1" placeholder="商品名稱">
					</td>
					<td>
						<select class="form-control" name="district">
							<option>選擇要新增的種類</option>
